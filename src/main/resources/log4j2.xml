<?xml version="1.0" encoding="UTF-8"?>
    <Configuration status="INFO">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss-SSS} (%logger{36}) [ %t %-5level] %msg%n" />
        </Console>
        <File name="FileAppender" fileName="logs/latest.log" immediateFlush="false" append="false">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss-SSS} (%logger{36}) [ %t %-5level] %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="ConsoleAppender" />
            <AppenderRef ref="FileAppender"/>
        </Root>
        </Loggers>
</Configuration>